# MongoDB connection string
MONGO_URI=mongodb+srv://username:password@cluster0.mongodb.net/yourdbname?retryWrites=true&w=majority

# Email credentials (e.g. Gmail SMTP)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_or_app_password

# SMS service API key (if using SMS notifications)
SMS_API_KEY=your_sms_api_key_here

# Optional: PORT number (default is 3000 if not set)
PORT=3000
